<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71d1d1"
    android:orientation="vertical"
    tools:context="com.example.enterprises.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/header1" />

    <ListView
        android:id="@+id/list_sub"
        android:layout_width="match_parent"
        android:layout_height="195dp"

        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"

        android:background="#ffffff"
        android:divider="#71d1d1"
        android:dividerHeight="6dp">


    </ListView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/enterprises"
        android:textColor="@color/colorAccent"
        android:textSize="22dp" />

    <ListView
        android:id="@+id/list_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"

        android:background="#ffffff"
        android:divider="#61c1f1"
        android:dividerHeight="8dp"></ListView>
</LinearLayout>


